{
	"manifest_version": 3,
	"name": "Edit Visually powered by WordPress Playground",
	"version": "1.2",
	"description": "Installs Playground Editor in specific textareas on GitHub and WordPress Trac",
	"permissions": [
		"tabs",
		"activeTab",
		"scripting",
		"offscreen",
		"webRequest",
		"webRequestBlocking"
	],
	"background": {
		"service_worker": "sw.js",
		"type": "module"
	},
	"host_permissions": [
		"https://playground.wordpress.net/",
		"https://github.com/",
		"https://meta.trac.wordpress.org/",
		"http://playground.internal/",
		"http://localhost:5400/",
		"https://adamadam.blog/",
		"<all_urls>"
	],
	"content_security_policy": {
		"extension_pages": "script-src 'self' 'wasm-unsafe-eval'; default-src 'self' http://localhost:5400/;"
	},
	"web_accessible_resources": [
		{
			"resources": ["wp-admin", "wp-login.php", "", "*", "index.html"],
			"matches": [
				"https://playground.wordpress.net/*",
				"https://github.com/*",
				"https://meta.trac.wordpress.org/*",
				"http://playground.internal/*",
				"https://adamadam.blog/*",
				"<all_urls>"
			],
			"use_dynamic_url": true
		}
	],
	"content_scripts": [
		{
			"matches": [
				"https://github.com/*",
				"https://meta.trac.wordpress.org/*"
			],
			"js": ["webcomponents-polyfill.js", "content-script.js"],
			"run_at": "document_idle"
		}
	]
}
